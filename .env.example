# App
APP_ENV=development
LOG_LEVEL=INFO
APP_NAME=llm-chat-platform
API_PORT=8000

# LLM
LLM_PROVIDER=openai
LLM_API_KEY=changeme

# Postgres (Docker service name recomendado: postgres)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=llmchat
POSTGRES_USER=llmchat
POSTGRES_PASSWORD=llmchatpass

# DATABASE_URL (computed by settings.database_url)
# postgresql+asyncpg://llmchat:llmchatpass@postgres:5432/llmchat

# Redis (Docker service name recomendado: redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
